<Window x:Class="ProductManagementSystem.Views.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Поиск товаров" Height="550" Width="1050"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель поиска -->
        <GroupBox Header="Параметры поиска" Grid.Row="0" Padding="12" Margin="0,0,0,15">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,8">
                    <TextBlock Text="Искать по:" Width="100" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <RadioButton x:Name="rbName" Content="Названию товара" IsChecked="True" 
                                 Margin="15,0" GroupName="SearchType" FontSize="13"/>
                    <RadioButton x:Name="rbCategory" Content="Категории" 
                                 Margin="15,0" GroupName="SearchType" FontSize="13"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,12">
                    <TextBlock Text="Введите текст:" Width="100" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtSearch" Width="450" Height="30" Margin="15,0" FontSize="13"
                             KeyDown="txtSearch_KeyDown"/>
                    <Button x:Name="btnSearch" Content="🔍 Искать" Width="110" Height="32" 
                            Margin="10,0" Click="btnSearch_Click" 
                            Background="#2196F3" Foreground="White" FontWeight="Bold"/>
                    <Button x:Name="btnShowAll" Content="Показать все" Width="110" Height="32" 
                            Margin="5,0" Click="btnShowAll_Click" Background="#4CAF50" Foreground="White"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Результаты поиска -->
        <GroupBox Header="Результаты поиска" Grid.Row="1">
            <Grid>
                <DataGrid x:Name="dgResults" AutoGenerateColumns="False" IsReadOnly="True"
                          AlternatingRowBackground="#F5F5F5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding ProductID}" Width="60"/>
                        <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Категория" Binding="{Binding Category}" Width="150"/>
                        <DataGridTextColumn Header="Цена (₽)" Binding="{Binding Price, StringFormat='{}{0:F2}'}" Width="100"/>
                        <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel x:Name="pnlNoResults" VerticalAlignment="Center" HorizontalAlignment="Center"
                            Visibility="Collapsed">
                    <TextBlock Text="❌" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="Товары не найдены" FontSize="18" Foreground="Gray" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Попробуйте изменить параметры поиска" FontSize="13" 
                               Foreground="LightGray" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
