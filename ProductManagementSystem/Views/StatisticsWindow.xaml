<Window x:Class="ProductManagementSystem.Views.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Статистика товаров" Height="650" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Общая статистика по товарам" FontSize="22" FontWeight="Bold" 
                   Grid.Row="0" Margin="0,0,0,25" HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <Border Background="#E3F2FD" Padding="20" Margin="0,10" CornerRadius="8" BorderBrush="#2196F3" BorderThickness="2">
                <StackPanel>
                    <TextBlock Text="Всего товаров в наличии:" FontSize="15" FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtTotalProducts" Text="0" FontSize="32" 
                               Foreground="#2196F3" Margin="0,8,0,0" FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <Border Background="#E8F5E9" Padding="20" Margin="0,10" CornerRadius="8" BorderBrush="#4CAF50" BorderThickness="2">
                <StackPanel>
                    <TextBlock Text="Средняя цена товара:" FontSize="15" FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtAveragePrice" Text="0.00 ₽" FontSize="32" 
                               Foreground="#4CAF50" Margin="0,8,0,0" FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <Border Background="#FFF3E0" Padding="20" Margin="0,10" CornerRadius="8" BorderBrush="#FF9800" BorderThickness="2">
                <StackPanel>
                    <TextBlock Text="Общая стоимость всех товаров:" FontSize="15" FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtTotalValue" Text="0.00 ₽" FontSize="32" 
                               Foreground="#FF9800" Margin="0,8,0,0" FontWeight="Bold"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <Button x:Name="btnRefresh" Content="🔄 Обновить статистику" Grid.Row="2" 
                Width="200" Height="40" Click="btnRefresh_Click" FontSize="14"
                Background="#2196F3" Foreground="White" FontWeight="Bold"/>
    </Grid>
</Window>
