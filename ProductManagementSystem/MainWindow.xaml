<Window x:Class="ProductManagementSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Система учёта товаров" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Меню навигации -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#2196F3">
            <Button x:Name="btnProducts" Content="Управление товарами" Width="180" Height="40" 
                    Margin="5" Click="btnProducts_Click" Background="White" FontSize="14"/>
            <Button x:Name="btnStatistics" Content="Статистика" Width="150" Height="40" 
                    Margin="5" Click="btnStatistics_Click" Background="White" FontSize="14"/>
            <Button x:Name="btnSearch" Content="Поиск товаров" Width="150" Height="40" 
                    Margin="5" Click="btnSearch_Click" Background="White" FontSize="14"/>
        </StackPanel>

        <!-- Приветственное сообщение -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Добро пожаловать в систему учёта товаров!" 
                       FontSize="24" FontWeight="Bold" Foreground="#2196F3"
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <TextBlock Text="Выберите модуль в меню выше" 
                       FontSize="16" Foreground="Gray"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>